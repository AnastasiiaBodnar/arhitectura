@model OnlineStoreApp.Models.Product

@{
    ViewData["Title"] = "Створити товар";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Створити новий товар</h2>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Назва товару</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Ціна</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Категорія</label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Оберіть категорію</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories as List<OnlineStoreApp.Models.Category>)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Опис</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">URL зображення</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                    <label asp-for="IsAvailable" class="form-check-label">Доступний для продажу</label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Створити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>