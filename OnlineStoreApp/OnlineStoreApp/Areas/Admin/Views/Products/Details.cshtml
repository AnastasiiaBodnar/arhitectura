@model OnlineStoreApp.Models.Product

@{
    ViewData["Title"] = "Деталі товару";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>@Model.Name</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-3">Назва:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Опис:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Ціна:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Категорія:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                        <dt class="col-sm-3">Статус:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Доступний</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Недоступний</span>
                            }
                        </dd>

                        <dt class="col-sm-3">URL зображення:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ImageUrl)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="card">
                    <div class="card-header">
                        <h6>Зображення товару</h6>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height: 300px;">
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Edit", "Products", new { area = "Admin", id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit"></i> Редагувати
        </a>
        <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад до списку
        </a>
    </div>
</div>