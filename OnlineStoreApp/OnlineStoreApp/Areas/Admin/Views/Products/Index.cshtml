@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.ErrorMessage
    </div>
}

@model IEnumerable<OnlineStoreApp.Models.Product>

@{
    ViewData["Title"] = "Управління товарами";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>

            <div class="mb-3">
                <a href="@Url.Action("Create", "Products", new { area = "Admin" })" class="btn btn-success">
                    <i class="fas fa-plus"></i> Додати новий товар
                </a>
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-outline-primary">
                    <i class="fas fa-home"></i> На головну
                </a>
                <a href="@Url.Action("Index", "Home", new { area = "User" })" class="btn btn-outline-secondary">
                    <i class="fas fa-store"></i> Каталог товарів
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Список товарів</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Зображення</th>
                                        <th>Назва</th>
                                        <th>Категорія</th>
                                        <th>Ціна</th>
                                        <th>Статус</th>
                                        <th>Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model!)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@(item.Category?.Name ?? "Без категорії")</td>
                                            <td><strong>@item.Price.ToString("C")</strong></td>
                                            <td>
                                                @if (item.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Доступний</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Недоступний</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "Products", new { area = "Admin", id = item.Id })" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i> Деталі
                                                    </a>
                                                    <a href="@Url.Action("Edit", "Products", new { area = "Admin", id = item.Id })" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> Редагувати
                                                    </a>
                                                    <a href="@Url.Action("Delete", "Products", new { area = "Admin", id = item.Id })" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> Видалити
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <p class="text-muted">Всього товарів: <strong>@Model.Count()</strong></p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h4>Немає товарів</h4>
                            <p>Поки що немає жодного товару в системі.</p>
                            <a href="@Url.Action("Create", "Products", new { area = "Admin" })" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Додати перший товар
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>