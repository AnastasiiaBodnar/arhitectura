@model OnlineStoreApp.Models.Product

@{
    ViewData["Title"] = "Видалити товар";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning">
        <h4>Увага!</h4>
        <p>Ви дійсно хочете видалити цей товар?</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Інформація про товар</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Назва:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Опис:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Ціна:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Категорія:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                <dt class="col-sm-3">Статус:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Доступний</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Недоступний</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>