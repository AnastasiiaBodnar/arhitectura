@model IEnumerable<OnlineStoreApp.Models.Product>

@{
    ViewData["Title"] = "Каталог товарів";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model!)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <span class="text-muted">Немає фото</span>
                                    </div>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text flex-grow-1">@(product.Description ?? "Опис відсутній")</p>
                                    <p class="card-text"><small class="text-muted">Категорія: @(product.Category?.Name ?? "Без категорії")</small></p>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="h5 text-success mb-0">@product.Price.ToString("C")</span>
                                            <button class="btn btn-primary">Додати в кошик</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info text-center">
                            <h4>Каталог порожній</h4>
                            <p>Наразі немає доступних товарів для покупки.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>